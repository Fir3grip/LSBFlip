{
  "manifest_version": 3,
  "name": "BitFlip Canvas Protector",
  "version": "1.0",
  "description": "Blocks canvas fingerprinting using controlled bit-flip noise.",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
